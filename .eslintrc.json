{
  "env": {
    "jest/globals": true,
    "es2022": true,
    "node": true
  },
  "extends": "airbnb-base",
  "plugins": ["jest"],
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "rules": {
        "max-lines-per-function": "off"
      }
    }
  ],
  "globals": {
    "describe": true,
    "it": true,
    "true": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "max-lines-per-function": [
      "warn",
      {
        "max": 15
      }
    ],
    "quotes": ["error", "single"]
  }
}
